package jp.ng1056.ane {		import flash.events.EventDispatcher;	import flash.events.IEventDispatcher;	import flash.events.MouseEvent;	import flash.events.Event;	import flash.events.StatusEvent;	import flash.external.ExtensionContext;	import flash.system.Capabilities;		public class AlertView extends EventDispatcher {				private var _context:ExtensionContext;		private var _clickedIndex:uint;				public function AlertView( i_target:IEventDispatcher = null ) {						super( i_target );			_context = ExtensionContext.createExtensionContext("jp.ng1056.ane.AlertView", "type");			_context.addEventListener( StatusEvent.STATUS, _onChangeStatus );								}				public function isSupported():Boolean {						return Capabilities.manufacturer.indexOf("iOS") != -1;					}				public function show( i_title:String, i_message:String, i_btn1:String, i_btn2:String = null ):void {						if( i_btn2 ) {				_context.call( "AlertViewShow", i_title, i_message, i_btn1, i_btn2 );			}else {				_context.call( "AlertViewShow", i_title, i_message, i_btn1 );			}					}				private function _onChangeStatus( i_event:StatusEvent ):void {						if ( i_event.code == "CLICK" ) {								_clickedIndex = parseInt( i_event.level );				dispatchEvent( new MouseEvent( MouseEvent.CLICK ) );							}					}				public function get clickedIndex():uint {			return _clickedIndex;		}			}}